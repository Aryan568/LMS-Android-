<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C5EAE6"
    tools:context=".ManageBooks">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="700dp"
        android:layout_marginHorizontal="22dp"
        app:cardElevation="100dp"
        android:backgroundTint="@color/teal_600"
        app:cardCornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="220dp"
            android:layout_height="120dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="30dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:text="Manage Books"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:gravity="center"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/bookno"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:includeFontPadding="true"
            android:paddingLeft="8dp"
            android:ems="10"
            android:background="@drawable/edittext_bkg"
            android:layout_marginTop="-140dp"
            android:layout_gravity="center"
            android:hint="   b o o k   n o ."
            android:text=""
            android:inputType="number"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/title"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:includeFontPadding="true"
            android:paddingLeft="8dp"
            android:ems="10"
            android:background="@drawable/edittext_bkg"
            android:layout_marginTop="-60dp"
            android:layout_gravity="center"
            android:hint="   t i t l e"
            android:inputType="textPersonName"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/author"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:includeFontPadding="true"
            android:paddingLeft="8dp"
            android:ems="10"
            android:background="@drawable/edittext_bkg"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:hint="   a u t h o r"
            android:inputType="textPersonName"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/category"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:includeFontPadding="true"
            android:paddingLeft="8dp"
            android:ems="10"
            android:background="@drawable/edittext_bkg"
            android:layout_marginTop="100dp"
            android:layout_gravity="center"
            android:hint="   c a t e g o r y"
            android:inputType="textPersonName"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="510dp"
            android:backgroundTint="@color/teal_200"
            android:text="Save"
            app:cornerRadius="30dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="510dp"
            android:layout_marginLeft="205dp"
            android:backgroundTint="@color/teal_200"
            android:text="Update"
            app:cornerRadius="30dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="590dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="50dp"
            android:backgroundTint="@color/teal_200"
            android:text="Delete"
            app:cornerRadius="30dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="590dp"
            android:layout_marginLeft="205dp"
            android:backgroundTint="@color/teal_200"
            android:text="Clear"
            app:cornerRadius="30dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="S"
            android:layout_marginLeft="247dp"
            android:layout_marginTop="185dp"
            android:backgroundTint="@color/teal_700"
            app:cornerRadius="30dp" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>