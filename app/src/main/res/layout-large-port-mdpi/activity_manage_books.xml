<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/frr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageBooks">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="570dp"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="90dp"
        app:cardElevation="100dp"
        android:backgroundTint="@color/brown_300"
        app:cardCornerRadius="50dp">

    <androidx.cardview.widget.CardView
        android:layout_width="220dp"
        android:layout_height="120dp"
        app:cardCornerRadius="30dp"
        android:layout_marginLeft="50dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:text="Manage Books"
                android:textSize="40dp"
                android:gravity="center"
                android:textStyle="bold"/>

        </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/bookno"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:ems="10"
        android:background="@drawable/edittext_bkg"
        android:layout_marginTop="-120dp"
        android:layout_gravity="center"
        android:hint="   b o o k   n o ."
        android:inputType="number"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/title"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:ems="10"
        android:background="@drawable/edittext_bkg"
        android:layout_marginTop="-50dp"
        android:layout_gravity="center"
        android:hint="   t i t l e"
        android:inputType="textPersonName"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/author"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:ems="10"
        android:background="@drawable/edittext_bkg"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:hint="   a u t h o r"
        android:inputType="textPersonName"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/category"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:ems="10"
        android:background="@drawable/edittext_bkg"
        android:layout_marginTop="90dp"
        android:layout_gravity="center"
        android:hint="   c a t e g o r y"
        android:inputType="textPersonName"
        android:textStyle="bold|italic" />

        <Button
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="490dp"
            android:text="Save"
            app:cornerRadius="30dp" />

        <Button
            android:id="@+id/b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="490dp"
            android:layout_marginLeft="180dp"
            android:text="Update"
            app:cornerRadius="30dp"/>

    <Button
        android:id="@+id/b3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="570dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="50dp"
        android:text="Delete"
        app:cornerRadius="30dp"/>

    <Button
        android:id="@+id/b4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="570dp"
        android:layout_marginLeft="180dp"
        android:text="Clear"
        app:cornerRadius="30dp"/>

    <Button
        android:id="@+id/b5"
        android:layout_width="45dp"
        android:layout_height="47dp"
        android:text="S"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="180dp"
        app:cornerRadius="30dp"/>
    </androidx.cardview.widget.CardView>
</ScrollView>